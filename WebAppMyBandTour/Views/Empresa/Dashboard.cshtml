@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-container">
    <!-- Menú lateral -->
    <aside class="dashboard-sidebar">
        <ul>
            <li><a href="@Url.Action("CrearConciertoVista", "Empresa")" class="btn btn-azul">Crear Concierto</a></li>
            <li><a href="@Url.Action("BorrarConciertoVista", "Empresa")" class="btn btn-azul">Borrar Concierto</a></li>
        </ul>
    </aside>

    <!-- Contenido principal -->
    <main class="tabla-container">
        <h3>Lista de Conciertos</h3>
        <!-- 👇 Aquí ya tiene id + class -->
        <table id="tablaConciertos" class="dashboard-table">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Banda</th>
                    <th>Género</th>
                    <th>Fecha</th>
                    <th>Hora</th>
                    <th>País</th>
                    <th>Lugar</th>
                </tr>
            </thead>
            <tbody>
                <!-- Datos dinámicos desde JS -->
            </tbody>
        </table>
    </main>
</div>
